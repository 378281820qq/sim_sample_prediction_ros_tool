<launch>

    <arg name="config" default="$(find sim_sample_prediction_ros_tool)/launch/params/object_forwarding_without_prediction_parameters.yaml"/>
    <arg name="nodelet_manager_name" default="nodelet_manager_object_forwarding_without_prediction"/>
    <arg name="start_nodelet_manager" default="true"/>
    <arg name="nodelet_name" default="object_forwarding_without_prediction"/>

    <!-- Nodelet manager (if enabled) -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)" args="manager" output="screen"
          if="$(arg start_nodelet_manager)"/>

    <!-- ObjectForwardingWithoutPrediction -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_name)"
          args="load sim_sample_prediction_ros_tool/ObjectForwardingWithoutPredictionNodelet $(arg nodelet_manager_name)" output="screen" required="true">
        <rosparam command="load" file="$(arg config)"/>
    </node>

</launch>
